{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"pretty": false,
		"removeComments": true,
		"sourceMap": false,
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"es2016",
			"es2017.string"
		]
	},
	"include": [
		"./types/*.d.ts",
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
